<!--calc.wxml-->
<view class='testview'>
  <label id="result">{{result}}</label>
  <button class="button scale1" data-num="7" bindtap="tapNum">7</button>
  <button class="button scale1" data-num="8" bindtap="tapNum">8</button>
  <button class="button scale1" data-num="9" bindtap="tapNum">9</button>
  <button class="button scale1" data-num="*" bindtap="tapNum">*</button>
  <button class="button scale1" data-num="4" bindtap="tapNum">4</button>
  <button class="button scale1" data-num="5" bindtap="tapNum">5</button>
  <button class="button scale1" data-num="6" bindtap="tapNum">6</button>
  <button class="button scale1" data-num="-" bindtap="tapNum">-</button>
  <button class="button scale1" data-num="1" bindtap="tapNum">1</button>
  <button class="button scale1" data-num="2" bindtap="tapNum">2</button>
  <button class="button scale1" data-num="3" bindtap="tapNum">3</button>
  <button class="button scale1" data-num="+" bindtap="tapNum">+</button>
  <button class="button scale2" data-num="0" bindtap="tapNum">0</button>
  <button class="button scale1" data-num="." bindtap="tapNum">.</button>
  <button class="button scale1" data-num="=" bindtap="tapNum">=</button>
</view>