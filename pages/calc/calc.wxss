/* calc.wxss */
.calc {
  width: 100%;
  height: 100%;
  background: #333;
  display: block;
}
.title {
  color: #fff;
  text-align: center;
  width: 96%;
  display: block;
  margin-bottom: 25px;
}
#result {
  width: 96%;
  height: 50px;
  border: 2px solid #999;
  display: block;
  background: #ddd;
  margin-bottom: 15px;
  box-sizing: border-box;
  font-size: 28px;
  line-height: 50px;
  text-align: right;
  padding-left: 15px;
  padding-right: 15px;
}

.testview {
  width: 100%;
  height: 500px;
  background: green;
  flex-direction: row;
   /* justify-content: space-around;  */
  /* justify-content: space-between; */
  /* justify-content: flex-end; */
  padding: 2%;  
}
.button {
  height: 80px;
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  line-height: 80px;
  font-size: 36px;
  margin: 1%;
  border: 1px solid #ddd;
  background: #eee;
}
.scale1 {
  width: 22%;
}
.scale2 {
  width: 46%;
}