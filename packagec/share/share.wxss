/* pages/share/share.wxss */
.anm {
  width: 50%;
  margin: 0 auto;
  display: block;
  animation: join 1s;
  -webkit-animation: join 1s; 
  /* Safari 与 Chrome */
  animation-iteration-count: infinite;
}

@keyframes join
  {
      /*0%   {background: red;}
      25%  {background: yellow;}
      50%  {background: blue;}
      100% {background: green;}*/
      0% {width: 60%;}
      50% {width: 70%;}
      100% {width: 60%;}
  }
   
  @-webkit-keyframes join /* Safari 与 Chrome */
  {
      /*0%   {background: red;}
      25%  {background: yellow;}
      50%  {background: blue;}
      100% {background: green;}*/
      0% {width: 60%;}
      50% {width: 70%;}
      100% {width: 60%;}
  }